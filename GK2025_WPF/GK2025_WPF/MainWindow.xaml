<Window x:Class="GK2025_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GK2025_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Start SDL" Click="StartSDL_Click" Width="120" Height="40"/>

        <Button Content="Załaduj obraz" Click="ladujBMP_Click" Width="120" Height="40" Grid.Column="1" Grid.Row="1"/>
        <ComboBox x:Name="image_selection" Width="200" Height="20" Margin="10" Grid.Row="1"/>


        <Button Content="paleta" Click="paleta_Click" Width="120" Height="40" Grid.Column="1" Grid.Row="2"/>
        <ComboBox x:Name="paleta_selection" Width="200" Height="20" Margin="10" Grid.Row="2">
            <ComboBoxItem Content="paleta narzucona" />
            <ComboBoxItem Content="paleta narzucona szara" />
            <ComboBoxItem Content="paleta MedianCut" />
            <ComboBoxItem Content="paleta MedianCut szara" />
            <ComboBoxItem Content="paleta narzucona ucięcie bitowe" />
            <ComboBoxItem Content="..........." />
        </ComboBox>
        <TextBlock x:Name="loading_block" Visibility="Collapsed" Text="Ładowanie...." Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center"/>
       
        <Button Content="dithering" Click="dithering_Click" Width="120" Height="40" Grid.Column="1" Grid.Row="3"/>
        <ComboBox x:Name="dithering_selection" Width="200" Height="20" Margin="10" Grid.Row="3">
            <ComboBoxItem Content="bayer szary" />
            <ComboBoxItem Content="bayer kolorowy" />
            <ComboBoxItem Content="......." />
        </ComboBox>

        <Button Content="dodaj plik" Click="AddFile_Click" Width="120" Height="40" Grid.Column="2" Grid.Row="1"/>
        <Button Content="zapisz jako blik binarny" Click="SafeFileBin_Click" Width="120" Height="40" Grid.Column="1" Grid.Row="4"/>
        <Button Content="odczytaj plik binarny" Click="LoadFileBin_Click" Width="120" Height="40" Grid.Column="2" Grid.Row="4"/>
        <ComboBox x:Name="file_selection" Width="200" Height="20" Margin="10" Grid.Row="4">
            <ComboBoxItem Content="zapis" />
            <ComboBoxItem Content="zapis z zredukowaną paletą" />
            <ComboBoxItem Content="zapis z zredukowaną paletą szarą" />
            <ComboBoxItem Content="zapis z wykrytą paletą" />
            <ComboBoxItem Content="zapis z szarą paletą median cut" />
            <ComboBoxItem Content="zapis z paletą median cut" />
            
        </ComboBox>
    </Grid>
</Window>
