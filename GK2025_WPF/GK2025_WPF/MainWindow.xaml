<Window x:Class="GK2025_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GK2025_WPF"
        mc:Ignorable="d"
        Title="Procesor Obrazu" Height="520" Width="900"
        Background="#1E1E1E">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- START -->
        <GroupBox Header="Silnik" Foreground="White">
            <StackPanel Margin="10">
                <Button Content="Start SDL" Click="StartSDL_Click" Height="40"/>
            </StackPanel>
        </GroupBox>

        <!-- WCZYTYWANIE -->
        <GroupBox Header="Obraz" Grid.Column="1" Grid.Row="1" Foreground="White">
            <StackPanel Margin="10" Orientation="Horizontal">
                <Button Content="Załaduj obraz" Click="ladujBMP_Click" Width="140" Height="35"/>
                <ComboBox x:Name="image_selection" Width="250" Margin="10,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <Button Content="Dodaj plik" Click="AddFile_Click" Width="140" Height="35"
                Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"/>

        <!-- PALETA -->
        <GroupBox Header="Redukcja palety" Grid.Column="1" Grid.Row="2" Foreground="White">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Paleta" Click="paleta_Click" Width="120" Height="35"/>
                    <ComboBox x:Name="paleta_selection" Width="300" Margin="10,0,0,0">
                        <ComboBoxItem Content="paleta narzucona" />
                        <ComboBoxItem Content="paleta narzucona szara" />
                        <ComboBoxItem Content="paleta MedianCut" />
                        <ComboBoxItem Content="paleta MedianCut szara" />
                        <ComboBoxItem Content="paleta narzucona ucięcie bitowe" />
                        <ComboBoxItem Content="..........." />
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <TextBlock x:Name="loading_block" Visibility="Collapsed"
                   Text="Ładowanie..."
                   Foreground="Orange"
                   FontSize="14"
                   Grid.Column="2" Grid.Row="2"
                   VerticalAlignment="Center"/>

        <!-- DITHERING -->
        <GroupBox Header="Dithering" Grid.Column="1" Grid.Row="3" Foreground="White">
            <StackPanel Margin="10" Orientation="Horizontal">
                <Button Content="Dithering" Click="dithering_Click" Width="120" Height="35"/>
                <ComboBox x:Name="dithering_selection" Width="250" Margin="10,0,0,0">
                    <ComboBoxItem Content="bayer szary" />
                    <ComboBoxItem Content="bayer kolorowy" />
                    <ComboBoxItem Content="......." />
                </ComboBox>
            </StackPanel>
        </GroupBox>

        <!-- ZAPIS BINARNY -->
        <GroupBox Header="Pliki binarne" Grid.Column="1" Grid.Row="4" Foreground="White">
            <StackPanel Margin="10" Orientation="Horizontal">
                <Button Content="Zapisz" Click="SafeFileBin_Click" Width="120" Height="35"/>
                <Button Content="Odczytaj" Click="LoadFileBin_Click" Width="120" Height="35" Margin="10,0,0,0"/>
                <ComboBox x:Name="file_selection" Width="350" Margin="10,0,0,0">
                    <ComboBoxItem Content="zapis" />
                    <ComboBoxItem Content="zapis z zredukowaną paletą" />
                    <ComboBoxItem Content="zapis z zredukowaną paletą szarą" />
                    <ComboBoxItem Content="zapis z wykrytą paletą" />
                    <ComboBoxItem Content="zapis z szarą paletą median cut" />
                    <ComboBoxItem Content="zapis z paletą median cut" />
                    <ComboBoxItem Content="zapis z zredukowaną paletą (optymalizowany)" />
                    <ComboBoxItem Content="zapis z zredukowaną paletą szarą (optymalizowany)" />
                    <ComboBoxItem Content="zapis z wykrytą paletą (optymalizowany)" />
                    <ComboBoxItem Content="zapis z szarą paletą median cut (optymalizowany)" />
                    <ComboBoxItem Content="zapis z paletą median cut (optymalizowany)" />
                </ComboBox>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
